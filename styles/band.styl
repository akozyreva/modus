.wrapper-band
	position relative
	margin 0 auto

@media screen and (max-width: 550px){
	.wrapper-band{
		margin-left -3.5em
	}
}
@media screen and (max-width: 700px) and (min-width: 550px) {
	  .wrapper-band{
	    	margin-left -2.5em
	  	}
}

	.band
		position relative
		height 5px
		min-width 60px
		width auto
		display inline-block
		left 40%
		margin 20px 11px
		background #b0b8b9
		cursor pointer
	@media screen and (max-width: 800px) {
	  			.band{
	    			min-width 30px
	  			}
			}
	@media screen and (max-width: 480px) {
	  			.band{
	    			min-width 20px
	  			}
			}