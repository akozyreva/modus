.icon-menu
	position relative
	color #e1524b
	font-size 12px !important
.wrapper-stat
	position relative
	background  #f3f3f3
	.stat
		width 100%
		background  #f3f3f3
	.why-choose-us
		position relative
		display inline-block
		max-width 243px
		float left
		margin-right 95px
		margin-bottom 55px
		margin-top 60px
		p.why-title 
			font-family OpenSans-ExtraBold
			font-size 16px
			color #7f8c8c
		.why-menu
			position relative
			margin-top 45px
			display inline-block
			p
				font-family OpenSans
				font-size 13px
				color #777777
				margin-bottom 15px
	@media screen and (max-width: 1130px)
		.why-choose-us
			float none !important
			display block
			margin 0 auto
			min-width 300px
			p.why-title
				font-size 30px
			.why-menu p
				font-size 20px
	.wrapper-diagram
		position relative
		float left
		display block
		margin-top 60px
		.stat-text-diagram
			position relative
			display block
			max-width 532px
			p.stat-text
				font-family OpenSans
				font-size 13px
				color #777777
				line-height 1.8
		.stat-diagram
			position relative
			max-width 580px
			min-height 100%
			display block
			margin-top 60px
			.stat-diagram-wrapper
				min-width 136px
				min-height 105px
				display inline-block
				position relative
	@media screen and (max-width: 1130px)
		.wrapper-diagram
			float none !important
			display block
			margin 0 auto
			width 50%
			.stat-text-diagram p.stat-text
				font-size 20px
.why-choose-us.right
	margin-right 0
	float right
	background none
	.why-message-wrapper
		position relative
		background #fff
		border-radius 5px
		margin-top 30px	
		p.why-message 
			font-family OpenSans-Italic
			font-size 13px
			color #777777
			padding 20px
			line-height 1.5
	.why-treangle
		position relative
		margin-left 20px
		width 0
		height 0
		border-style solid
		border-width 0 23px 23px 0
		border-color transparent #ffffff transparent transparent
		display inline-block
	p.why-sign
			font-size 16px
			font-family OpenSans-Semibold
			color #777777
			display inline-block
			margin-left 20px
@media screen and (max-width: 1130px)
		.why-choose-us.right
			margin-right auto
			.why-message-wrapper p.why-message, p.why-sign 
				font-size 20px
.happy-wrapper
	position relative
	display inline-block 
	width 100%
	min-height 68px
	.happy-clients-wrapper
		position relative
		float left
		display inline-block
		p.happy-clients
			font-family OpenSans-ExtraBold
			font-size 16px
			color #7f8c8c
			margin-right 20px
	@media screen and (max-width: 1130px)
		.happy-clients-wrapper
			float none
			display block
			max-width 332px
			margin 0 auto
			p.happy-clients
				font-size 30px
				margin-top 20px			
	.circle-row-wrapper
		position relative
		float left
		min-width 75%
		margin-top 10px
		.happy-clients-circle
			position absolute
			left 0
			top -2px
			width: 6px;
			height: 6px;
			background: #e1e2e2;
			-moz-border-radius: 50px;
			-webkit-border-radius: 50px;
			border-radius: 3px;
		.happy-clients-row
			position relative
			width 100%
			height 1px
			border-top 1px #e1e2e2 solid
	@media screen and (max-width: 1130px)
		.circle-row-wrapper
			width 95%
			margin-left 10px
			.happy-clients-row
				border-top 5px #e1e2e2 solid
			.happy-clients-circle
				width 12px
				height 12px
				border-radius 6px
	.happy-switch-wrapper
		position relative
		display inline-block
		.happy-switch
			position relative
			float right
			background #98a3a3
			width 40px
			height 40px
			margin-left 18px
			cursor pointer
			border-radius 5px
			.icon-switch
				color #fff
				font-size 20px
				margin 10px
	@media screen and (max-width: 1130px)
		.happy-switch-wrapper
			max-width 131px
			margin 0 auto
			display block
			.happy-switch
				margin-top 10px
				margin-left 0px
				margin-right 18px
				float lef
.jquery-wrapper
	position relative
	overflow hidden
	.jquery
		position relative
		float left
		background white
		width 14.3%
		min-height 95px
		margin-right 30px
		margin-top 55px
		margin-bottom 55px
		border-radius 5px
		.jquery-image
			float none
			padding-left 16%
			max-width 100%
			max-height 100%
			padding-top 35px
	.jquery.no-margin-right
			margin-right 0px
	@media screen and (max-width: 1130px)
		.jquery
			width 25%
			margin-left 14%
	@media screen and (max-width: 950px)
		.jquery
			width 80%
			margin-left 10%
			margin-bottom 0px
		.jquery.no-margin-right
			margin-bottom 20px
